<?xml version='1.0' encoding='utf-8'?>
<widget id="com.Reflowster.FlickerstripApp" version="0.5.4" ios-CFBundleVersion="8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Flickerstrip</name>
    <description>
        Control your Flickerstrips from your mobile device.
    </description>
    <author email="admin@flickerstrip.com" href="http://flickerstrip.com">
        Julian Hartline
    </author>

    <icon src="resources/icons/icon120x120.png" />

    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
	<preference name="SplashScreenDelay" value="500" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />

		<!-- SEE: https://cordova.apache.org/docs/en/latest/config_ref/images.html -->
		<icon src="resources/icons/icon36x36.png" density="ldpi" />
		<icon src="resources/icons/icon48x48.png" density="mdpi" />
		<icon src="resources/icons/icon72x72.png" density="hdpi" />
		<icon src="resources/icons/icon96x96.png" density="xhdpi" />
		<icon src="resources/icons/icon180x180.png" density="xxhdpi" />
		<icon src="resources/icons/icon192x192.png" density="xxxhdpi" />

		<splash src="resources/icons/splash640x960.png" density="port-xhdpi" />
		<splash src="resources/icons/splash480x800.png" density="port-hdpi" />
		<splash src="resources/icons/splash320x480.png" density="port-mdpi" />
		<splash src="resources/icons/splash240x320.png" density="port-ldpi" />
		<splash src="resources/icons/splash960x640.png" density="land-xhdpi" />
		<splash src="resources/icons/splash800x480.png" density="land-hdpi" />
		<splash src="resources/icons/splash480x320.png" density="land-mdpi" />
		<splash src="resources/icons/splash320x240.png" density="land-ldpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <hook type="after_prepare" src="scripts/configureProject.js" />

		<!-- SEE: https://cordova.apache.org/docs/en/latest/config_ref/images.html -->
		<splash src="resources/icons/splash320x480.png" width="320" height="480"/>
		<splash src="resources/icons/splash640x960.png" width="640" height="960"/>
		<splash src="resources/icons/splash768x1024.png" width="768" height="1024"/>
		<splash src="resources/icons/splash1536x2048.png" width="1536" height="2048"/>
		<splash src="resources/icons/splash1024x768.png" width="1024" height="768"/>
		<splash src="resources/icons/splash2048x1536.png" width="2048" height="1536"/>
		<splash src="resources/icons/splash640x1136.png" width="640" height="1136"/>
		<splash src="resources/icons/splash750x1334.png" width="750" height="1334"/>
		<splash src="resources/icons/splash1242x2208.png" width="1242" height="2208"/>
		<splash src="resources/icons/splash2208x1242.png" width="2208" height="1242"/>

		<icon src="resources/icons/icon29x29.png" width="29" height="29" />
		<icon src="resources/icons/icon40x40.png" width="40" height="40" />
		<icon src="resources/icons/icon50x50.png" width="50" height="50" />
		<icon src="resources/icons/icon57x57.png" width="57" height="57" />
		<icon src="resources/icons/icon58x58.png" width="58" height="58" />
		<icon src="resources/icons/icon60x60.png" width="60" height="60" />
		<icon src="resources/icons/icon72x72.png" width="72" height="72" />
		<icon src="resources/icons/icon76x76.png" width="76" height="76" />
		<icon src="resources/icons/icon80x80.png" width="80" height="80" />
		<icon src="resources/icons/icon100x100.png" width="100" height="100" />
		<icon src="resources/icons/icon114x114.png" width="114" height="114" />
		<icon src="resources/icons/icon120x120.png" width="120" height="120" />
		<icon src="resources/icons/icon144x144.png" width="144" height="144" />
		<icon src="resources/icons/icon152x152.png" width="152" height="152" />
		<icon src="resources/icons/icon180x180.png" width="180" height="180" />
    </platform>
</widget>
